@model PlataformaEficienciaEnergetica.Models.Predio

<h1>Criar Novo Prédio</h1>

<form asp-action="Criar" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConsumoEnergetico" class="control-label">Consumo Energético:</label>
        <input asp-for="ConsumoEnergetico" class="form-control" />
        <span asp-validation-for="ConsumoEnergetico" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsoEnergiaRenovavel" class="control-label">Uso de Energia Renovável:</label>
        <input asp-for="UsoEnergiaRenovavel" class="form-control" />
        <span asp-validation-for="UsoEnergiaRenovavel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>